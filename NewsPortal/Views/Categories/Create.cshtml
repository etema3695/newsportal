   @model NewsPortal.Common.Models.Requests.Category.AddCategory

@{
    ViewBag.Title = "New Category";
}

<h2 style="color:#337ab7">New Category</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-12">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label", @style = "margin-left:14px" })
            </div>
            <div class="col-md-12">
                <div class="col-md-3">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @style = "margin-top:10px " } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-12">

                @Html.LabelFor(model => model.ParentId, "Parent Category", htmlAttributes: new { @class = "control-label",@style="margin-left:14px;margin-top:10px;" })
            </div>
            <div class="col-md-12">
                <div class="col-md-3">
                    @Html.DropDownList("ParentId", (SelectList)ViewBag.Parent_Id, "Select if it has Parent Category", htmlAttributes: new { @class = "form-control", @style = "margin-top:10px" })

                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
