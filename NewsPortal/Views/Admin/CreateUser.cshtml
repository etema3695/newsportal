
@{
    ViewBag.Title = "Create User";
}

<h2 style="color:#337ab7;margin-left:45rem;padding-bottom:15px;">Create User</h2>

@using (Html.BeginForm("CreateUser", "Admin", FormMethod.Post))
{
<div class="row" style="margin-left:25rem">
    <div class="col-md-12">
       <div class="col-md-3">
        <label class="control-label">User Email</label>
        <input type="text" name="txtEmail" class="form-control" autocomplete="off" required/>

       </div>

       <div class="col-md-6" style="margin-left:80px">
        <label class="control-label">Select</label>
        @Html.DropDownList("RoleName", (IEnumerable<SelectListItem>)ViewBag.Roles, "Role...")
       </div>

    </div>
    <div class="col-md-12">
    <div class="col-md-3" style="margin-top:15px">
        <label class="control-label">Password</label>
        <input type="password" name="txtPassword" class="form-control" autocomplete="off" required/>
    </div>
    </div>
    <div class="col-md-12">
    <div class="col-md-3" style="margin-top:15px">
        <label class="control-label">Number</label>
        <input type="tel" name="txtNumber" class="form-control" autocomplete="off" required/>
    </div>
    </div>
</div>
    <div class="row" style="margin-left:25rem">
        <div class="col-md-6" style="margin-top:15px">
            <button type="submit" value="Submit" class="btn btn-primary" style="margin-left:40rem">Create</button>

        </div>
    </div>
}

